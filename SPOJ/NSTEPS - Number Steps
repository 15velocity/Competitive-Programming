#include<iostream>

using namespace std;

int main()
{
	int tc,x,y;
	cin>>tc;
	while(tc--)
	{
		cin>>x>>y;
		if(x==y)
		{
			if(x%2==0)
				cout<<x*2;
			else
				cout<<x*2-1;
					
			cout<<endl;		
			continue;	
		}
		else if(y==x-2)
		{
			if(x%2==0)
				cout<<x*2-2;
			else
				cout<<x*2-3;	
			
			cout<<endl;
			continue;		
		}
		else
			cout<<"No Number"<<endl;
	}
}
